<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="390.0"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.ungefroren.JMacros.core.ui.editor.parameters.KeyParameter">
    <padding>
        <Insets bottom="7.0" top="7.0"/>
    </padding>
    <HBox>
        <VBox.margin>
            <Insets bottom="5.0"/>
        </VBox.margin>
        <Label fx:id="key" prefWidth="245.0" text="Label">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <padding>
                <Insets left="5.0" right="5.0" top="5.0"/>
            </padding>
        </Label>
        <TextField fx:id="value" alignment="CENTER" editable="false" onKeyPressed="#onKeyPress"
                   onAction="#onAction" prefWidth="90.0"/>
    </HBox>
    <Label fx:id="description"
           text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna "
           wrapText="true">
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0"/>
        </padding>
    </Label>
</VBox>
